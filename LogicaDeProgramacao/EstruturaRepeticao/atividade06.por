/* Faça um algoritmo que mostra todos os números pares de 2 a 100.​*/

programa
{
	
	funcao inicio()
	{
		inteiro numero = 0

		enquanto(numero < 100){
			escreva(numero = numero + 2, "\n")
		}
	}
}

